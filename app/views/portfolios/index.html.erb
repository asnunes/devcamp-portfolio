<h1>Portfolio items</h1>

<%= link_to "Create a new portfolio", new_portfolio_path %>
<% @portfolios.each do |portfolio|%>
<p><%= portfolio.title%></p>
<p><%= portfolio.subtitle%></p>
<p><%= portfolio.body%></p>
<%= image_tag portfolio.main_image unless portfolio.main_image.nil?%>
<%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil?%>
<%= link_to "Edit this portfolio", edit_portfolio_path(portfolio.id) %>
<%end%>